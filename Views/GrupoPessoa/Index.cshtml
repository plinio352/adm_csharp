@model IEnumerable<adm_csharp.Models.GrupoPessoa>

@{
    ViewData["Title"] = "Lista";
}

<h1>Lista Grupo Pessoa</h1>

<p>
    <a asp-action="Novo">Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Grupo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sigla)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Grupo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sigla)
            </td>
            <td>
                <a asp-action="Editar" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Excluir" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
