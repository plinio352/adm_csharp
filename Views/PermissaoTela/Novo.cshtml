@model adm_csharp.Models.PermissaoTela

@{
    ViewData["Title"] = "Novo";
}

<h1>Novo</h1>

<h4>PermissaoTela</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveNovo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FormularioId" class="control-label"></label>
                <select asp-for="FormularioId" class ="form-control" asp-items="ViewBag.FormularioId"></select>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <select asp-for="UsuarioId" class ="form-control" asp-items="ViewBag.UsuarioId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Leitura" class="control-label"></label>
                <select asp-for="Leitura" class ="form-control" asp-items="ViewBag.Leitura"></select>
                <span asp-validation-for="Leitura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Incluir" class="control-label"></label>
                <select asp-for="Incluir" class ="form-control" asp-items="ViewBag.Incluir"></select>
                <span asp-validation-for="Incluir" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alterar" class="control-label"></label>
                <select asp-for="Alterar" class ="form-control" asp-items="ViewBag.Alterar"></select>
                <span asp-validation-for="Alterar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Excluir" class="control-label"></label>
                <select asp-for="Excluir" class ="form-control" asp-items="ViewBag.Excluir"></select>
                <span asp-validation-for="Excluir" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volta Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
